# Docker environment configuration
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Frontend URL for CORS (Docker)
FRONTEND_URL=http://localhost:3000

# Database configuration (Docker Compose services)
DATABASE_URL=postgresql://stratibreak_user:stratibreak_pass@postgres:5432/stratibreak_dev

# JWT configuration (Docker)
JWT_SECRET=docker-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=docker-refresh-secret-key-not-for-production
JWT_REFRESH_EXPIRES_IN=30d

# Redis configuration (Docker Compose service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# Logging
LOG_LEVEL=debug

# ML/AI Configuration (Docker)
ML_SERVICE_URL=http://ml-service:8000
ML_API_KEY=docker-ml-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Docker-specific settings
ENABLE_SWAGGER=true
ENABLE_CORS=true

# External API configurations (Docker - use test/sandbox environments)
# These should be configured per developer's needs
# JIRA_API_URL=
# JIRA_API_TOKEN=
# JIRA_EMAIL=

# Email Configuration (Docker - use Mailhog for local testing)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=dev@stratibreak.com
